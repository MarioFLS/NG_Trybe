{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base",
    "plugin:import/typescript",
    "plugin:import/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "overrides": [
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["/home/mario/Projetos/NG_Trybe/tsconfig.json"]
  },
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "ignorePatterns": [],
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": "off",
    "comma-dangle": "off",
    "max-len": ["error", { "code": 90, "ignoreUrls": true, "ignoreComments": true }],
    "no-unreachable": "error",
    "no-else-return": "error",
    "consistent-return": ["off", { "treatUndefinedAsUnspecified": true }],
    "no-unused-vars": "off",
    "no-console": "off",
    "no-underscore-dangle":"off",
    "lines-between-class-members":"off",
    "no-throw-literal":"off",
    // Comandos tirandos do site do npm do Eslint
    "@typescript-eslint/no-unused-vars": ["warn",
  { 
    "argsIgnorePattern": "^_",
    "varsIgnorePattern": "^_",
    "caughtErrorsIgnorePattern": "^_"
  }],
  
  "import/no-unresolved": [2, { "caseSensitiveStrict": true, "commonjs": false, "amd": true }],
  "import/named": 2,
  "import/namespace": 2,
  "import/default": 2,
  "import/export": 2,
  "import/extensions": [
    "error",
    "ignorePackages",
    {
      "js": "never",
      "ts": "never"
    }
  ]
  }
}
